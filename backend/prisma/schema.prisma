generator client {
  provider = "prisma-client"
  output = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum CONTACT_STATUS {
  ACTIVE
  INACTIVE
  PENDING
}

enum JOB_TYPE {
  PART_TIME
  FULL_TIME
  INTERNSHIP
  CONTRACT
}

enum JOB_STATUS {
  SAVED
  APPLIED
  SCREEN
  INTERVIEWING
  OFFER
  WITHDRAWN
  GHOSTED
  REJECTED
}

enum REMINDER_TYPE {
  FOLLOW_UP
  INTERVIEW
  ASSESSMENT
  DEADLINE
  CALL
  EMAIL
  OTHER
}

enum REMINDER_STATUS {
  PENDING
  COMPLETED
  CANCELLED
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String?
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  role      String?   @default("USER")
  emailVerified Boolean @default(false)
  verificationCode  String?
  verificationCodeExpires DateTime?
  jobs      Job[]
  contacts  Contact[]
}

model Job {
  id        String   @id @default(cuid())
  title     String
  company   String?
  location  String?
  jobType   JOB_TYPE?
  status    JOB_STATUS @default(SAVED)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  reminders JobReminder[]
  createdAt DateTime @default(now())
}

model Contact {
  id        String         @id @default(cuid())
  name      String
  email     String?
  phone     String?
  linkedin  String?
  company   String
  status    CONTACT_STATUS @default(ACTIVE)
  userId    String
  user      User           @relation(fields: [userId], references: [id])
  createdAt DateTime       @default(now())
}

model JobReminder {
  id          String         @id @default(cuid())
  title       String
  description String?
  type        REMINDER_TYPE
  status      REMINDER_STATUS @default(PENDING)
  dueDate     DateTime
  jobId       String
  job         Job            @relation(fields: [jobId], references: [id], onDelete: Cascade)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}
